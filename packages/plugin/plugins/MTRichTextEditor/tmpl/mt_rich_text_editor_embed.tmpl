<a class="mt-rich-text-editor-embed-card" href="<mt:Var name="og_url" encode_html="1" />">
  <div class="mt-rich-text-editor-embed-card__image">
    <img src="<mt:Var name="og_image" encode_html="1" />" />
  </div>
  <div class="mt-rich-text-editor-embed-card__text">
    <div class="mt-rich-text-editor-embed-card__title"><mt:Var name="og_title" encode_html="1" /></div>
    <div class="mt-rich-text-editor-embed-card__description"><mt:Var name="og_description" encode_html="1" /></div>
    <div class="mt-rich-text-editor-embed-card__site-name">
      <mt:If name="icon"><img src="<mt:Var name="icon" encode_html="1" />" class="mt-rich-text-editor-embed-card__icon" /></mt:If>
      <mt:Var name="og_url" regex_replace="/^https?:\/\/([^/]+).*/","\1" encode_html="1" />
    </div>
  </div>
</a>
